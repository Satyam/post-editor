{
  "$schema": "https://raw.githubusercontent.com/neutralinojs/neutralinojs/main/schemas/neutralino.config.schema.json",
  "applicationId": "js.neutralino.sample",
  "version": "1.0.0",
  "defaultMode": "chrome",
  "port": 0,
  "documentRoot": "/resources/",
  "url": "/",
  "enableServer": true,
  "enableNativeAPI": true,
  "tokenSecurity": "one-time",
  "logging": {
    "enabled": false,
    "writeToLogFile": false
  },
  "nativeAllowList": ["app.*", "os.*", "debug.log", "filesystem.*"],
  "modes": {
    "window": {
      "title": "Roxy Blog Editor",
      "width": 850,
      "height": 500,
      "minWidth": 400,
      "minHeight": 200,
      "fullScreen": true,
      "alwaysOnTop": false,
      "icon": "/resources/icons/appIcon.png",
      "enableInspector": true,
      "borderless": false,
      "maximize": false,
      "hidden": false,
      "resizable": true,
      "exitProcessOnClose": false
    },
    "browser": {},
    "cloud": {
      "url": "/resources/#cloud",
      "nativeAllowList": ["app.*"]
    },
    "chrome": {
      "width": 800,
      "height": 500,
      "args": "--user-agent=\"Neutralinojs chrome mode\""
    }
  },
  "cli": {
    "binaryName": "roxy-editor",
    "resourcesPath": "/resources/",
    "extensionsPath": "/extensions/",
    "clientLibrary": "/resources/js/neutralino.js",
    "binaryVersion": "4.10.0",
    "clientVersion": "3.8.2"
  },
  "globalVariables": {
    "HEXO_DIR": "../roxygrabber/hexo",
    "HEXO_FILES_LIST": "../roxygrabber/hexo/public/files.json",
    "HEXO_IMG_DIR": "../roxygrabber/hexo/source/assets/img",
    "SRC_PAGES_DIR": "../roxygrabber/hexo/source",
    "DRAFTS_INFO": "resources/drafts/info.json",
    "DRAFTS_DIR": "resources/drafts",
    "EDITOR_IMG_DIR": "resources/assets/img"
  }
}
